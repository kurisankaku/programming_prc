<source>
  @type forward
  port 24224
  bind 0.0.0.0
</source>

<match apache.access>
  @type file
  path /var/log/td-agent/httpd/access
  time_slice_format {{td_agent.time_slice_format}}
  time_slice_wait {{td_agent.time_slice_wait}}
  time_format {{td_agent.time_format}}
  compress gzip
  utc
</match>

